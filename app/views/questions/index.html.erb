<% content_for :current_page, 'review' %>
<%= render "shared/navbar"%>

<div class="container py-5">
  <div class="align-items-center mb-3">
    <h2 class="text-center review-title">Review</h2>
  </div>
  <div class="row">
    <% @questions.each do |question| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
        <div class="card d-flex flex-fill" data-controller="flashcard">
          <div class="flashcard-container" data-flashcard-target="container">
            <!-- Front side -->
            <div class="card-body flip-card front" data-flashcard-target="question">
              <h4 class="card-title text-center question-header"> <strong> Question </strong> </h4>
              <p class="fw-light">
                <%= question.question_content %>
              </p>
              <div class="mb-3">
                <textarea class="form-control font-monospace" id="exampleFormControlTextarea1 answer" rows="5" data-flashcard-target="userAnswer" placeholder="Your answer here..."></textarea>
              </div>
              <div class="d-grid gap-2">
                <button class="flip-button btn btn-outline-info" type="button" data-action="click->flashcard#flip">Flip</button>
              </div>
            </div>
            <!-- Back side -->
            <div class="card-body flip-card back" data-flashcard-target="answer" data-action="click->flashcard#flipBack">
              <div class="list-group">
                <div class="list-group-item list-group-item-action border-info" aria-current="true">
                  <div class="w-100 justify-content-between">
                    <h5 class="mb-1 text-center fst-italic" style="color: #1684A7;">Answer</h5>
                  </div>
                  <p class="mb-1 fw-light" style="color: #1684A7;"><%= question.answers.first.answer_content %></p>
                </div>
                <div class="list-group-item list-group-item-action border-warning">
                  <div class="w-100 justify-content-between">
                    <h5 class="mb-1 text-center fst-italic" style="color: #E67E22;">Your Answer</h5>
                  </div>
                  <p class="mb-1 answer" id="answer"></p>
                </div>Â Â Â Â 
                <div class="btn-group" role="group" aria-label="Basic outlined example">
                  <button type="button" class="btn btn-outline-info">Try Again ðŸ’ª</button>
                  <button type="button" class="btn btn-outline-info">Correct ðŸ™‚</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <%= render "shared/update_points" %>
  </div>
