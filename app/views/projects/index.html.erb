<% content_for :current_page, 'projects' %>

<%= render "shared/navbar"%>
  <div class="container" style="margin-bottom: 160px;">
    <div class="project-list">
      <%# title %>
      <div class="projects-page-title col-12 col-lg-6">
        <div class="title">
            <h1>My Learning Tracks</h1>
        <%# <%= link_to 'Completed Projects', history_path, class: "small-link" %>
        </div>

        <%# paw %>
        <div class="paw">
          <ul>
            <li><i class="fa-solid fa-paw yellow-paw"></i></li>
            <li><i class="fa-solid fa-paw yellow-paw-center"></i></li>
            <li><i class="fa-solid fa-paw yellow-paw"></i></li>
          </ul>
        </div>
        </div>

<div class="wrapper">
    <ul class="tab">
      <li><a href="#ToDo">Recommended</a></li>
      <li><a href="#In_progress">In progress</a></li>
      <li><a href="#Completed">Completed</a></li>
    </ul>
<%# To do tab------------------------------------------------------------------------ %>
<div id="Recommended" class="area">
  <div class="projects-listing-card">
        <%# Accepted projects will show only projects that the user added %>
        <% if @accepted_projects.any? %>
          <% @accepted_projects.each do |project| %>
        <div class="content">
          <div class="category-tag">
            <p class="subject-tag"><%= project.subject %></p>
            <p class="status-tag"><%= project.status.capitalize %></p>
          </div>

          <h6><strong>「<%= link_to project.name, project_path(project), class: 'lising-project-name' %>」</strong></h6>
          <%# <p><%= project.description</p>  %>
          <div class="content-bottom">
            <p><small><i class="fa-regular fa-clock d-frex"></i>Deadline</small><br><small class= 'project-deadlinedate'><%= project.deadline %></small></p>
            <button class="blue-btn">
            <%# ⬇︎need to fix the link later %>
              <%= link_to "Review", questions_path%>
            </button>
          </div>
        </div>
          <% end %>
      </div>
          <% else %>
            <p>You currently don't have any Learning Tracks. Time to start something new!!</p>
          <% end %>
  </div>
  <%# In progress tab------------------------------------------------------------------------ %>
  <div id="In_progress" class="area">
      <%# card list %>
      <div class="projects-listing-card">
    <% if @in_progress_projects.any? %>
      <% @in_progress_projects.each do |project| %>
        <%# Accepted projects will show only projects that the user added %>

        <div class="content">
          <div class="category-tag">
            <p class="subject-tag"><%= project.subject %></p>
            <p class="status-tag"><%= project.status.capitalize %></p>
          </div>

          <h6><strong>「<%= link_to project.name, project_path(project), class: 'lising-project-name' %>」</strong></h6>
          <%# <p><%= project.description</p>  %>
          <div class="content-bottom">
            <p><small><i class="fa-regular fa-clock d-frex"></i>Deadline</small><br><small class= 'project-deadlinedate'><%= project.deadline %></small></p>
            <button class="blue-btn">
            <%# ⬇︎need to fix the link later %>
              <%= link_to "Review", next_question_path%>
            </button>
          </div>
        </div>
            <% end %>
    <% else %>
      <p>No in-progress projects</p>
    <% end %>
  </div>
</div>
<%# Completed tab------------------------------------------------------------------------ %>
<div id="Completed" class="Completed">
<div class="projects-listing-card">
        <%# Accepted projects will show only projects that the user added %>
        <% if @completed_projects.any? %>
          <% @completed_projects.each do |project| %>
        <div class="content">
          <div class="category-tag">
            <p class="subject-tag"><%= project.subject %></p>
            <p class="status-tag"><%= project.status.capitalize %></p>
          </div>

          <h6><strong>「<%= link_to project.name, project_path(project), class: 'lising-project-name' %>」</strong></h6>
          <%# <p><%= project.description</p>  %>
          <div class="content-bottom">
            <p><small><i class="fa-regular fa-clock d-frex"></i>Deadline</small><br><small class= 'project-deadlinedate'><%= project.deadline %></small></p>
            <button class="blue-btn">
            <%# ⬇︎need to fix the link later %>
              <%= link_to "Review", next_question_path%>
            </button>
          </div>
        </div>
          <% end %>
      </div>
          <% else %>
            <p>No project</p>
          <% end %>
      </div>
    </div>
</div>
</div>
