<%= form_tag feed_buddy_path, method: :post, data: { controller: "feed" } do %>

  <div class="container py-3 buddy-show buddy-points">
  <i class="fa-solid fa-bone icon-born"></i>
    <%= image_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1692877986/donut-2.png", class: "icon-donut", "data-points": 1, data: { action: "feed#click" }, crop: :fill) %>
    <%= image_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1692878037/pizza-2.png", class: "icon-pizza", "data-points": 1, data: { action: "feed#click" }, crop: :fill) %>
    <%= image_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1692840836/xoysuzlsbyl2ffcp0ek4.png", class: "icon-book", "data-points": 1, data: { action: "feed#click" }, crop: :fill) %>
    <%= image_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1692666773/baseball.png", class: "icon-baseball", "data-points": 1, data: { action: "feed#click" }, crop: :fill) %>
</div>
