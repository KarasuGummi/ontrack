<% content_for :current_page, 'buddy' %>
<%= render "shared/navbar"%>
<div class="container py-3 buddy-show col-12">
  <%# -----------------------------------love and point part----------------------------------- %>
  <div class="love-point">
    <div class="buddy-love">
      <p><i class="fa-solid fa-heart"></i>&emsp;<%= @buddy.love %></p>
    </div>
    <div class="user-points">
      <%= image_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1693018258/oqdpn4gg1nipqaayehqq.png", height: 23, crop: :fill) %>&emsp;<%= current_user.points %></p>
    </div>
  </div>
</div>
<h3 class="text-center buddy-name"><%= @buddy.name.capitalize %></h3>
<%# display buddy %>
<%# -----------------------------------buddy comment----------------------------------- %>
<div class="buddy-room-img">
  <div class="buddy-comment">
    <% if @buddy.love > 0 && !@treat %>
      <p class="text-center">I'm hungry, give me snacks!</p>
    <% elsif @buddy.love > 0 && @treat == "pizza" %>
      <%# awake buddy %>
      <p class="text-center">Does Le Wagon have pizza too?üçï</p>
      <%# eating pizza buddy %>
    <% elsif @buddy.love > 0 && @treat == "donut" %>
      <p class="text-center">So yummyüç©</p>
      <%# eating dounuts buddy %>
    <% else %>
      <p class="text-center">Give me snacks or I'm going to keep sleeping</p>
    <% end %>
  </div>
  <%# -----------------------------------buddy img----------------------------------- %>
  <div class="buddy-show-img">
      <%# awake buddy %>
    <% if @buddy.love > 0 && !@treat %>
      <div class="awake-buddy">
        <%= image_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1691219849/dog_main.png", height: 140, crop: :fill) %>
      </div>
      <%# eating pizza buddy %>
    <% elsif @buddy.love > 0 && @treat == "pizza" %>
      <section class="buddy-eating">
        <%= image_tag("https://res.cloudinary.com/dbmqippyl/image/upload/v1692370091/dog-pizza-2_wjhrja.png", class: "bottom" , height: 140, crop: :fill) %>
        <%= image_tag("https://res.cloudinary.com/dbmqippyl/image/upload/v1692370091/dog-pizza-1_v3burp.png", class: "top", height: 140, crop: :fill) %>
      </section>
      <%# eating donuts buddy %>
    <% elsif @buddy.love > 0 && @treat == "donut" %>
      <section class="buddy-eating">
        <%= image_tag("https://res.cloudinary.com/dbmqippyl/image/upload/v1692370091/dog-donut-2_or42m8.png", class: "bottom" , height: 140, crop: :fill) %>
        <%= image_tag("https://res.cloudinary.com/dbmqippyl/image/upload/v1692370091/dog-donut-1_1_e5bmzt.png", class: "top", height: 140, crop: :fill) %>
      </section>
       <%# study buddy %>
    <% elsif @buddy.love > 0 && @treat == "book" %>
      <section class="buddy-studing">
        <%= image_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1692840872/twrzudjszwplnkzcumb3.png", height: 140, crop: :fill) %>
      </section>
    <% else %>
      <section class="sleeping-buddy">
        <%= image_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1691390436/qifldk91fout1jdwru7r.png", class: "bottom", crop: :fill) %>
        <%= image_tag("https://res.cloudinary.com/dbmqippyl/image/upload/v1692203189/Sleeping-dog-mouth-closed_in6j1c.png", class: "top", height: 140, crop: :fill) %>
      </section>
    <% end %>
  </div>
</div>
<%# -----------------------------------buddy snacks----------------------------------- %>
<div class="container py-3 buddy-show buddy-points">
  <%= form_tag feed_buddy_path, method: :post do %>
    <%= hidden_field_tag "treat", "donut" %>
    <%= image_submit_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1692877986/donut-2.png", class: "icon-donut", crop: :fill, height: 40, width: 40) %>
  <% end %>
  <%= form_tag feed_buddy_path, method: :post do %>
    <%= hidden_field_tag "treat", "pizza"%>
    <%= image_submit_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1692878037/pizza-2.png", class: "icon-pizza", crop: :fill, height: 40, width: 40) %>
  <% end %>
  <%= form_tag feed_buddy_path, method: :post do %>
    <%= hidden_field_tag "treat", "book" %>
    <%= image_submit_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1692840836/xoysuzlsbyl2ffcp0ek4.png", class: "icon-book", crop: :fill, height: 40, width: 40) %>
  <% end %>
  <%= form_tag feed_buddy_path, method: :post do %>
    <%= hidden_field_tag "treat", "baseball" %>
    <%= image_submit_tag("https://res.cloudinary.com/du53mgiot/image/upload/v1692666773/baseball.png", class: "icon-baseball", crop: :fill, height: 40, width: 40) %>
  <% end %>
</div>
